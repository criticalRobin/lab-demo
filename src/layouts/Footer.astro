---
import GroupFooterNav from "../components/blocks/GroupFooterNav.astro";
import Container from "../components/shared/Container.astro";
import FooterNav from "../components/shared/FooterNav.astro";
import Paragraph from "../components/shared/Paragraph.astro";

const footerServices = [
  {
    itemText: "Web Development",
    itemLink: "#",
  },
  {
    itemText: "Mobile Apps",
    itemLink: "#",
  },
  {
    itemText: "Cloud Solutions",
    itemLink: "#",
  },
  {
    itemText: "Consulting",
    itemLink: "#",
  },
];

const footerSupport = [
  {
    itemText: "Pricing",
    itemLink: "#",
  },
  {
    itemText: "Guides",
    itemLink: "#",
  },
  {
    itemText: "FAQ",
    itemLink: "#",
  },
  {
    itemText: "Contact",
    itemLink: "#",
  },
];

const footerCompany = [
  {
    itemText: "About Us",
    itemLink: "#",
  },
  {
    itemText: "Blog",
    itemLink: "#",
  },
  {
    itemText: "Careers",
    itemLink: "#",
  },
  {
    itemText: "Partners",
    itemLink: "#",
  },
];

const footerResources = [
  {
    itemText: "Documentation",
    itemLink: "#",
  },
  {
    itemText: "Privacy Policy",
    itemLink: "#",
  },
  {
    itemText: "Terms of Service",
    itemLink: "#",
  },
];
---

<footer
  class="relative bg-gradient-to-tr from-slate-100/85 to-zinc-200/85 dark:from-slate-800/85 dark:to-zinc-800/85 pt-28 rounded-t-3xl backdrop-blur-md"
>
  <Container className="pb-8 relative overflow-auto">
    <div
      class="grid grid-cols-2 lg:grid-cols-3 lg:items-stretch gap-8 relative"
    >
      <div class="col-span-2 lg:col-span-1 h-auto flex flex-col">
        <div class="h-full">
          <a href="#" class="relative flex items-center gap-3">
            <div class="inline-flex text-lg font-semibold text-heading-1">
              MatiTech
            </div>
          </a>
          <Paragraph className={"mt-8"}>
            Desarrollo de software a la medida de nuestros clientes.
          </Paragraph>
        </div>

        <!-- social links -->
        <div class="min-h-max flex items-center gap-4 text-heading-3 mt-8">
          <a href="#" class="transition hover:text-heading-1 hover:scale-105">
            <span class="sr-only">Facebook</span>
            <!-- Ícono de Facebook -->
          </a>
          <a href="#" class="transition hover:text-heading-1 hover:scale-105">
            <span class="sr-only">LinkedIn</span>
            <!-- Ícono de LinkedIn -->
          </a>
          <a href="#" class="transition hover:text-heading-1 hover:scale-105">
            <span class="sr-only">Twitter</span>
            <!-- Ícono de Twitter -->
          </a>
          <a href="#" class="transition hover:text-heading-1 hover:scale-105">
            <span class="sr-only">GitHub</span>
            <!-- Ícono de GitHub -->
          </a>
        </div>
      </div>

      <GroupFooterNav>
        <FooterNav title={"Company"} navItems={footerCompany} />
        <FooterNav title={"Services"} navItems={footerServices} />
      </GroupFooterNav>

      <GroupFooterNav>
        <FooterNav title={"Support"} navItems={footerSupport} />
        <FooterNav title={"Resources"} navItems={footerResources} />
      </GroupFooterNav>
    </div>
  </Container>
  <div class="py-2 relative">
    <Container>
      <div
        class="flex justify-between items-center gap-6 md:text-lg text-heading-3"
      >
        <div>
          &copy; <span id="year"></span> MatiTech. Todos los derechos reservados.
        </div>
        <div>
          Realizado por <a
            href="https://github.com/vbartalis"
            target="_blank"
            class="font-semibold">MatiTech</a
          >
        </div>
      </div>
    </Container>
  </div>
</footer>
