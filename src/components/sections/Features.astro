---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
  description: string;
};
const features = [
  {
    title: "Tecnología de Última Generación",
    description:
      "Nuestro laboratorio cuenta con equipos modernos y tecnología avanzada para garantizar resultados precisos y confiables.",
  },
  {
    title: "Entrega Rápida de Resultados",
    description:
      "Brindamos resultados en el menor tiempo posible, con opciones de entrega en línea, por correo electrónico o retiro en nuestras instalaciones.",
  },
  {
    title: "Servicio de Toma de Muestras a Domicilio",
    description:
      "Ofrecemos la comodidad de realizar sus análisis sin salir de casa con nuestro servicio de toma de muestras a domicilio.",
  },
  {
    title: "Atención Personalizada",
    description:
      "Nuestro equipo de especialistas está disponible para responder sus dudas y brindarle asesoría antes y después de sus exámenes.",
  },
  {
    title: "Resultados Seguros y Confidenciales",
    description:
      "Garantizamos la confidencialidad de sus datos y resultados mediante estrictos protocolos de seguridad.",
  },
  {
    title: "Variedad de Pruebas de Laboratorio",
    description:
      "Realizamos análisis clínicos, pruebas hormonales, estudios microbiológicos, pruebas COVID-19, perfil lipídico, entre otros.",
  },
  {
    title: "Facilidad de Agendamiento",
    description:
      "Programe su cita de manera rápida y sencilla a través de nuestra página web, por teléfono o en nuestras instalaciones.",
  },
  {
    title: "Normas y Certificaciones de Calidad",
    description:
      "Cumplimos con altos estándares de calidad y certificaciones nacionales e internacionales para asegurar resultados precisos.",
  },
  {
    title: "Atención 24/7 en Línea",
    description:
      "Contamos con atención en línea para resolver sus inquietudes y ayudarle a interpretar sus resultados en cualquier momento.",
  },
  {
    title: "Alianzas con Seguros Médicos",
    description:
      "Trabajamos con diversas aseguradoras para brindarle opciones de cobertura en sus análisis de laboratorio.",
  },
  {
    title: "Historial de Resultados en Línea",
    description:
      "Acceda a su historial de pruebas y resultados en cualquier momento a través de nuestro portal web seguro.",
  },
  {
    title: "Promociones y Paquetes Preventivos",
    description:
      "Ofrecemos paquetes de salud con descuentos especiales para chequeos preventivos y análisis completos.",
  },
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
        Ofrecemos <GradiantText>Servicios <br />Clínicos</GradiantText> de Alta Calidad
      </Title>
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      {
        features.map((feature: FeatureProps) => {
          return (
            <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
              <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
      <!-- </div> -->
    </div>
  </Container>
</section>
